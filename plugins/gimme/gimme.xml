<plugin>
	<title>Gimme</title>
	<filename>gimme.swf</filename>
	<version>1.01</version>
	<compatibility>Requires 4.5 or later</compatibility>
	<author>GimmeSomeCandy LLC</author>
	<description>
        Adds a dock button that allows you to accept donations.
	</description>
	<href>http://www.gimmesomecandy.com/developer/plugins</href>

    <flashvars>
        <flashvar>
            <name>url</name>
            <default>(empty)</default>
            <description>URL of your donation page</description>

            <name>target</name>
            <default>_blank</default>
            <description>HTML TARGET for destination link. Set to _self to open in the same page.</description>

            <name>caption</name>
            <default>donate</default>
            <description>Caption beneath the icon</description>

            <name>icon</name>
            <default>0</default>
            <description>0=default, 1=GimmeSomeCandy, 2=GimmeSomeCandy color</description>
        </flashvar>
    </flashvars>
</plugin>
